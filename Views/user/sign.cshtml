@model Cinema.Models.customer
<link rel="stylesheet" href="~/Content/sign.css">
<script>
    $(document).ready(function () {
        $('#name').focusout(function () {
            
       
            var c=$('#name').val();
          $.getJSON("/user/check?cust=" +c,  function (data) {
             
                if (data == true) {
                    alert("user name already exists.Try a new one");
                    $('#name').val("");
                }
            });
        });
    });
</script>
<script>
    $(document).ready(function () {
        $('#email').focusout(function () {

            var c = $('#email').val();

            
            $.getJSON("/user/email?cust=" + c, function (data) {
                if (data == true) {
                    alert("Email already registered");
                    $('#email').val("");
                }
            });
        });
    });
</script>  
<div id="registration">
 <h2>Create an Account</h2>

 <form id="RegisterUserForm" action="/user/save" method="post">
 	<fieldset>
         <p>
            <label for="name">Name</label>
            <input id="name" name="name" type="text" class="text" value="" / required>
         </p>
        
         <p>
            <label for="tel">Phone Number</label>
            <input id="tel" name="phone" type="tel" class="text" value="" / required>
         </p>
        
         <p>
            <label for="email">Email</label>
            <input id="email" name="email" type="email" class="text" value="" / required>
         </p>
        
         <p>
            <label for="password">Password</label>
            <input id="password" name="pass" class="text" type="password"  required/>
         </p>
        
         <p><input id="acceptTerms" name="acceptTerms" type="checkbox" / required>
            <label for="acceptTerms">
                I agree to the <a href="/home/terms">Terms and Conditions</a> and <a href="/home/terms">Privacy Policy</a>
            </label>
         </p>
        
         <p>
            <input id="registerNew" type="submit" name="" value="Register" />
         </p>
 	</fieldset>

 </form>
</div>
